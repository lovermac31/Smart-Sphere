rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tenants/smart-sphere-hcmc/enrollments/{document} {
      allow create: if request.resource.data.studentData.domains.Listening >= 0 && request.resource.data.studentData.domains.Listening <= 100
                    && request.resource.data.studentData.domains.Speaking >= 0 && request.resource.data.studentData.domains.Speaking <= 100
                    && request.resource.data.studentData.domains.Reading >= 0 && request.resource.data.studentData.domains.Reading <= 100
                    && request.resource.data.studentData.domains.Writing >= 0 && request.resource.data.studentData.domains.Writing <= 100
                    && request.resource.data.studentData.domains.Thinking >= 0 && request.resource.data.studentData.domains.Thinking <= 100;
      allow read, update, delete: if false; // Write-only for public submission
    }
  }
}
